generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model osm_Place {
  id              Int @id @default(autoincrement())
  bar             osm_Bar?
  cafe            osm_Cafe?
  fast_food       osm_FastFood?

  restaurant      osm_Restaurant?

  amenity         String?

  node            Int @unique
  name            String?
  lat             Float?
  long            Float?
  city            String?
  housenumber     Int?
  postcode        Int?
  street          String?

  created         DateTime  @default(now())
  updated         DateTime  @default(now())
}

model osm_Restaurant {
  id              Int  @id @default(autoincrement())
  place           osm_Place @relation(fields: [fk_placeId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  fk_placeId      Int  @unique

  email           String?
  operator        String?
  website         String?
  opening_hours   String?

  wheelchair      String?
  outdoor_seating Boolean?   @default(false)
  dog             Boolean?   @default(false)

  cuisine         String?
  lunch           String?
  organic         String?
  takeaway        String?
  
  diet_kosher     Boolean?  @default(false)
  diet_halal      Boolean?  @default(false)
  diet_diabetes   Boolean?  @default(false)
  diet_vegan      Boolean?  @default(false)
  diet_vegetarian Boolean?  @default(false)
}

model osm_Bar {
  id              Int  @id @default(autoincrement())
  place           osm_Place @relation(fields: [fk_placeId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  fk_placeId      Int  @unique

  operator        String?
  website         String?
  phone           String?
  opening_hours   String?
  brand           String?

  smoking         Boolean?
  internet_access String?
  
  wheelchair      String?
  outdoor_seating Boolean?   @default(false)
  indoor_seating  Boolean?   @default(false)
  dog             Boolean?   @default(false)

  cuisine         String?
  organic         String?
  takeaway        String?
  brewery         Boolean?  @default(false)

  diet_kosher     Boolean?  @default(false)
  diet_halal      Boolean?  @default(false)
  diet_diabetes   Boolean?  @default(false)
  diet_vegan      Boolean?  @default(false)
  diet_vegetarian Boolean?  @default(false)       
}

model osm_Cafe {
  id              Int  @id @default(autoincrement())
  place           osm_Place @relation(fields: [fk_placeId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  fk_placeId      Int  @unique

  operator        String?
  website         String?
  phone           String?
  opening_hours   String?
  brand           String?

  smoking         Boolean?
  self_service    Boolean?
  
  wheelchair      String?
  outdoor_seating Boolean?   @default(false)
  indoor_seating  Boolean?   @default(false)
  dog             Boolean?   @default(false)

  cuisine         String?
  organic         String?
  takeaway        String?

  ice_cream       Boolean?
  bakery          Boolean?
  pastry          Boolean?

  diet_kosher     Boolean?  @default(false)
  diet_halal      Boolean?  @default(false)
  diet_diabetes   Boolean?  @default(false)
  diet_vegan      Boolean?  @default(false)
  diet_vegetarian Boolean?  @default(false)       
}

model osm_FastFood {
  id              Int  @id @default(autoincrement())
  place           osm_Place @relation(fields: [fk_placeId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  fk_placeId      Int  @unique

  operator        String?
  website         String?
  phone           String?
  brand           String?
  opening_hours   String?
  
  drive_through   Boolean? @default(false)
  drive_in        Boolean? @default(false) 

  wheelchair      String?
  outdoor_seating Boolean?  @default(false)
  capacity        String?  
  dog             Boolean?  @default(false)

  cuisine         String?
  organic         String?
  takeaway        String?
  delivery        String?

  ice_cream       Boolean? @default(false)
  bakery          Boolean? @default(false)
  pastry          Boolean? @default(false)

  diet_kosher     Boolean?  @default(false)
  diet_halal      Boolean?  @default(false)
  diet_diabetes   Boolean?  @default(false)
  diet_vegan      Boolean?  @default(false)
  diet_vegetarian Boolean?  @default(false)      
}
