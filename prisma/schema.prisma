generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model osm_Place {
  id              Int @id @default(autoincrement())
  restaurant      osm_Restaurant?

  node            Int?
  name            String  @unique
  lat             Float?
  long            Float?
  city            String?
  housenumber     Int?
  postcode        Int?
  street          String?

  created         DateTime  @default(now())
  updated         DateTime  @default(now())
}

model osm_Restaurant {
  id              Int  @id @default(autoincrement())
  place           osm_Place @relation(fields: [fk_placeId], references: [id])
  fk_placeId      Int  @unique

  email           String?
  operator        String?
  website         String?
  opening_hours   String?

  wheelchair      String?
  outdoor_seating Boolean?   @default(false)
  dog             Boolean?   @default(false)

  cuisine         String?
  lunch           String?
  organic         String?
  takeaway        String?
  diet_kosher     Boolean?  @default(false)
  diet_halal      Boolean?  @default(false)
  diet_diabetes   Boolean?  @default(false)
  diet_vegan      Boolean?  @default(false)
  diet_vegetarian Boolean?  @default(false)
}